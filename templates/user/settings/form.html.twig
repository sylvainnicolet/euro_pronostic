{% extends 'base.html.twig' %}

{% block title %}Modifier le mot de passe{% endblock %}

{% block body %}
  <section id="user-edited-password" class="flex flex-col items-center">
    <a href="{{ path('user.index') }}" class="text-lg self-end"><i class="fas fa-home"></i></a>

    <h1 class="text-center text-2xl font-extrabold uppercase my-10">Modifier le mot de passe</h1>

    {{ form_start(form, {'attr': {'class': 'space-y-3 w-full'}}) }}

    <div>
      {{ form_label(form.password, null, { 'label_attr': {'class': 'sr-only'} }) }}
      {{ form_widget(form.password, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 placeholder-gray-500 rounded-md focus:outline-none', 'placeholder': "Mot de passe"}}) }}
    </div>

    {{ form_rest(form) }}
    <button class="w-full py-2 px-4 rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none">{{ button|default('Enregistrer') }}</button>
    {{ form_end(form) }}
  </section>

{% endblock %}
