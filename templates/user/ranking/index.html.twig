      <tr class="border-b-2">
        <th class="text-left w-1/2">Joueur</th>
        <th class="text-right">Pts</th>
      </tr>
      </thead>
      <tbody>

      {% for user in users %}
        <tr>
          <td class="flex items-center">
            <a href="#">{{ user.username }}</a>
          </td>
          <td class="text-right">
