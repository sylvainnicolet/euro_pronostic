{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
  <section id="admin-board" class="flex flex-col items-center">
    <h1 class="text-center text-2xl font-extrabold uppercase mb-10">Salut {{ user.username }} !</h1>

    <nav class="w-full">
      <ul class="text-lg flex flex-col items-center space-y-6 text-center">

        <li class="w-full py-3 rounded-md text-white bg-indigo-600 hover:bg-indigo-700">
          <a href="
            {% if composition is null %}
              {{ path('user.composition.create', {id: user.id}) }}
            {% else %}
              {{ path('user.composition.edit', {id: composition.id}) }}
            {% endif %}
          ">Ma composition</a>
        </li>
        <li class="w-full py-3 rounded-md text-white bg-indigo-600 hover:bg-indigo-700"><a href="{{ path('user.ranking') }}">Classements</a></li>
        <li class="w-full py-3 rounded-md text-white bg-indigo-600 hover:bg-indigo-700"><a href="#">Matchs</a></li>
        <li class="w-full py-3 rounded-md text-white bg-indigo-600 hover:bg-indigo-700"><a href="{{ path('user.groupes') }}">Groupes</a></li>
        <li class="w-full py-3 rounded-md text-white bg-indigo-600 hover:bg-indigo-700"><a href="{{ path('user.rules') }}">Règlement</a></li>
        <li class="w-full py-3 rounded-md text-white bg-indigo-600 hover:bg-indigo-700"><a href="{{ path('user.settings.editPassword', {id: user.id}) }}">Paramètres</a></li>
        <li class="w-full py-4 rounded-md text-white bg-red-600 hover:bg-red-700"><a href="{{ path('logout') }}">Se déconnecter</a></li>
      </ul>
    </nav>
  </section>
{% endblock %}
