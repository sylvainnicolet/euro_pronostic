{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
  <section id="login" class="flex flex-col items-center">

    <h1 class="text-center text-2xl font-extrabold uppercase mb-6">Login</h1>

    <form class="space-y-3 w-full" action="{{ path('login') }}" method="POST">
        <div>
          <label for="email-address" class="sr-only">Username</label>
          <input id="username" name="_username" type="text" required
                 class="w-full px-3 py-2 border border-gray-300 placeholder-gray-500 rounded-md focus:outline-none"
                 placeholder="Nom d'utilisateur" value="{{ last_username }}">
        </div>

        <div>
          <label for="password" class="sr-only">Password</label>
          <input id="password" name="_password" type="password" autocomplete="current-password" required
                 class="w-full px-3 py-2 border border-gray-300 placeholder-gray-500 rounded-md focus:outline-none"
                 placeholder="Mot de passe">
        </div>

      {% if error %}
        <div class="text-red-500">
          {{ error.messageKey | trans(error.messageData, 'security') }}
        </div>
      {% endif %}

      <button type="submit"
              class="w-full justify-center py-2 px-4 rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none">
        Se connecter
      </button>
    </form>
  </section>
{% endblock %}
